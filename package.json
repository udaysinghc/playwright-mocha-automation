{
  "name": "playwrightframework",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:allure": "npx playwright test --reporter=allure-playwright",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "test:allure:report": "npm run test:allure && npm run allure:generate && npm run allure:open",
    "cleanup:all": "node cleanup-script.js all",
    "cleanup:test-results": "node cleanup-script.js test-results",
    "cleanup:reports": "node cleanup-script.js reports",
    "cleanup:allure": "rimraf allure-results allure-report",
    "cleanup:help": "node cleanup-script.js help",
    "test:clean": "npm run cleanup:all && npm run test",
    "report": "npx playwright show-report",
    "test:ci": "npx playwright test --reporter=allure-playwright,html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@currents/playwright": "^1.13.2",
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.10.1",
    "allure-playwright": "^3.0.7",
    "browserstack-local": "^1.5.6",
    "dotenv": "^16.4.7",
    "rimraf": "^5.0.5"
  }
}